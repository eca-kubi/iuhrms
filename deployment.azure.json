{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mysqlPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the MySQL database."
      }
    },
    "mysqlRootPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The root password for the MySQL database."
      }
    },
    "emailClientAppPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the email client app."
      }
    },
    "privateKeyValue": {
      "type": "securestring",
      "metadata": {
        "description": "The private key value."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "name": "cg-01",
      "location": "eastus",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "80"
            }
          ],
          "dnsNameLabel": "iuhrms-01"
        },
        "containers": [
          {
            "name": "iuhrms",
            "properties": {
              "image": "ecakubi/iuhrms:latest",
              "resources": {
                "requests": {
                  "cpu": 1.0,
                  "memoryInGb": 1.5
                }
              },
              "ports": [
                {
                  "protocol": "tcp",
                  "port": "80"
                }
              ],
              "environmentVariables": [
                {
                  "name": "APP_HOST",
                  "value": "iuhrms.jomascowaves.com"
                },
                {
                  "name": "MYSQL_USER",
                  "value": "iuhrms"
                },
                {
                  "name": "MYSQL_PASSWORD",
                  "value": "[parameters('mysqlPassword')]"
                },
                {
                  "name": "MYSQL_ROOT_HOST",
                  "value": "mysql"
                },
                {
                  "name": "MYSQL_DATABASE",
                  "value": "iuhrms"
                },
                {
                  "name": "EMAIL_CLIENT_APP_PASSWORD",
                  "value": "[parameters('emailClientAppPassword')]"
                },
                {
                  "name": "PRIVATE_KEY_VALUE",
                  "value": "[parameters('privateKeyValue')]"
                }
              ]
            }
          },
          {
            "name": "mysql",
            "properties": {
              "image": "ecakubi/mysql:latest",
              "resources": {
                "requests": {
                  "cpu": 1.0,
                  "memoryInGb": 1.5
                }
              },
              "environmentVariables": [
                {
                  "name": "MYSQL_USER",
                  "value": "iuhrms"
                },
                {
                  "name": "MYSQL_PASSWORD",
                  "value": "[parameters('mysqlPassword')]"
                },
                {
                  "name": "MYSQL_ROOT_PASSWORD",
                  "value": "[parameters('mysqlRootPassword')]"
                },
                {
                  "name": "MYSQL_ROOT_HOST",
                  "value": "mysql"
                },
                {
                  "name": "MYSQL_ALLOWED_HOST",
                  "value": "iuhrms"
                },
                {
                  "name": "MYSQL_DATABASE",
                  "value": "iuhrms"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
